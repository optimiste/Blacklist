{% extends 'base.html.twig' %}

{% block body %}
    <h1>URL sąrašas</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Pavadinimas</th>
                <th>Apibūdinimas</th>
                <th>Aktyvus</th>
                <th>URL</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td><a href="{{ path('links_show', { 'id': link.id }) }}">{{ link.title }}</a></td>
                <td>{{ link.description }}</td>
                <td>{% if link.active %}Yes{% else %}No{% endif %}</td>
                <td>{{ link.link }}</td>
                <td>
                            <a href="{{ path('links_show', { 'id': link.id }) }} " class = "btn btn-primary">rodyti</a>
                            <a href="{{ path('links_edit', { 'id': link.id }) }}"  class = "btn btn-primary">redaguoti</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('links_new') }}" class = "btn btn-success">Sukurti naują</a>
{% endblock %}
