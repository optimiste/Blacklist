{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vartotojai</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Vartotojo vardas</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Rolė</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>E-pašto adresas</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

            <a href="{{ path('users_index') }}" class = "btn btn-info">Grįžti į sąrašą</a>
            <a href="{{ path('users_edit', { 'id': user.id }) }}" class = "btn btn-primary">Redaguoti</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Ištrinti" class = "btn btn-danger">
            {{ form_end(delete_form) }}
{% endblock %}
