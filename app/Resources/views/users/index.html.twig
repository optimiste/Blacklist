{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vartotojų sąrašas</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Vartotojo vardas</th>
                <th>Rolė</th>
                <th>E-paštas</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                <td>{{ user.role }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('users_show', { 'id': user.id }) }}" class = "btn btn-primary">rodyti</a>
                    <a href="{{ path('users_edit', { 'id': user.id }) }}"class = "btn btn-primary">redaguoti</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('users_new') }}" class = "btn btn-success">Sukurti naują</a>

{% endblock %}
